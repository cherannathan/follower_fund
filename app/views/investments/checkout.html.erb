            <%= cl_image_tag investment.project.photo.key, class: "image-show w-100" %>
            <% end %></div>
      </div>
        <div class="rightcolumn border border-secondary">
          <div id="myProgress">
              <div id="myBar"></div>
          </div>
            <div class="row">
              <div class="col">
                <p><strong>   </strong> backers.</p>
              </div>
              <div class="col">
                <p>s<strong></strong></p>
              </div>
            </div>
          </div>
      </div>
      <%end %>
</div>
