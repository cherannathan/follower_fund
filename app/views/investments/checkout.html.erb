<div class="headerprojectsshow">
  <h2> Checkout </h2>
</div>

<div class = "containerspe">
 <div class="col-25">
          <div class="containerspe">
            <h3>Cart
              <span class="price" style="color:black">
                <i class="fa fa-shopping-cart"></i>
                <b><strong><%= @investments.count %></strong> projects </b>
              </span>
            </h4>
            <% @investments.each do |investment| %>
              <p><a href="#"> <%= investment.project.title %> </a> <span class="price">  <%=investment.price_cents %> $ </span></p>
              <% if policy(@investments).destroy? %>
                <div class = "btn btn-black">
                  <%= link_to "Destroy", project_investment_path(investment.project, investment), method: :delete, data: { confirm: "Are you sure?" }%>
                </div>
                <%= form_tag orders_path do %>
                  <%= hidden_field_tag 'investment_id', investment.id%>
                  <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
                <% end %>
              <% end %>
            <%end %>
              <hr>
            <p>Total <span class="price" style="color:black"><b> <%= current_user.pendingamount %> $ </b></span></p>
          </div>
      </div>
