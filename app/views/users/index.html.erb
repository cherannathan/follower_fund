  <h1 class="d-flex justify-content-center mt-5 mb-2"><%= @genre.presence || "all" %></h1>

<%= simple_form_for :search, url: root_path, method: :get do |f| %>
  <div class="search-form-control form-group px-5 mt-5">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for a creator/genre"/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search d-flex justify-content-between"></i> Search
    </button>
  </div>
<% end %>

<div class="container">
  <div class="cards-index">
    <% @users.each do |user| %>
      <div class="card-product">
      <%# <%= link_to "check profile, "users[:id]_path %>
            <h2><%= user.first_name %></h2>
            <p><%= user.last_name %></p>
            <p><%= user.pseudo %></p>
            <p><%= user.bio%></p>
          <div>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "avatar-bordered"%>
            <% end %>
          </div>
      </div>
    <% end %>
  </div>
</div>

