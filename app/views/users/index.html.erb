<div class="purple-background">

<%= render 'shared/navbar_univers' %>

<div class="banner-index justify-content-start">
   <%= image_tag "Saly-12.png", style: "position: absolute; height: 600px; right: 80px; transform: rotate(10deg); z-index: 2; top: -73px;" %>
  <div class="d-flex flex-column align-items-start justify-content-start container" style="background-color: transparent;">
    <h1 class="d-flex justify-content-center mt-3 mb-3 text-white font-weight-bold"><%= @genre.presence || "Discover Creators" %></h1>
    <div class="d-flex align-items-center mb-3 mt-3 w-50 position-relative" id="form-search" style="z-index: 10;">
      <%= form_tag users_path, method: :get, class: 'search-form-control', data: { turbo: true } do %>
        <%= text_field_tag :query, params[:query], id: "", placeholder: "e.g. PewDiePie" %>
        <%= submit_tag "Search", style: "display: none;" %>
      <% end %>
      <button id="search-button" type="button" class="btn btn-search position-absolute" style="right: 0;">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </div>
</div>

  <%#= simple_form_for :search, url: root_path, method: :get do |f| %>
    <%#= f.input :email,
                required: true,
                autofocus: true,
                value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                input_html: { autocomplete: "email" } %>
  <%# <div class="search-form-control form-group px-5 mt-5">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" placeholder="Search for a creator/genre"/>
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search d-flex justify-content-between"></i> Search
    </button>
  </div>
<% end %>

<div class="container bg-white mb-5 mt-5 pt-5" >
  <div class="cards-index">
    <% @users.each do |user| %>
        <%= link_to user_path(user), class: 'text-decoration-none text-dark' do %>

        <% if user.photo.attached? %>
          <div class="card-product position-relative" style="background-image: url(<%= cl_image_path user.photo.key %>)">
          <div class="badge-wrapper">
            <% user.genres.map { |genre| genre.name }.uniq.each do |name| %>
            <div class="badge badge-pill badge-light mr-2"><%= name.downcase %></div>
            <%end %>
          </div>
        <% else %>
          <div class="card-product" style="background-image: url(<%= asset_path "FakeAvatar" %>)">
        <% end %>
            <h2 class="text-center mt-2"><%= user.pseudo %></h2>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

