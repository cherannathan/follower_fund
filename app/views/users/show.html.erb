<div class="creator-banner" style="background-image: url('https://images.unsplash.com/photo-1601907234174-e7a575b47753?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1189&q=80')">
 <%= cl_image_tag(@creator.photo.key, crop: :thumb, gravity: :face, class:"avatar-creator-page") %>
</div>

<div class="creator container">
  <div>
    <h1><%= @creator.pseudo %></h1>
    <h3><%= @creator.first_name%> <%= @creator.last_name %></h3>
  </div>
  <div class="row d-flex justify-content-between align-items">
    <div class="col-sm-6" style="height: 400px padding: 88px">
      <div class="embed-responsive embed-responsive-16by9">
        <iframe class="embed-responsive-item" src="<%= @creator.youtube_link %>" allowfullscreen></iframe>
      </div>
    </div>
    <div class="whoami-box col-sm-5 border border-secondary position-relative text-center">
      <h2>Who am I ?</h2>
      <br>
      <p><%= @creator.bio %></p>
      <div class="data ml-50px border border-secondary">
        <h3 > Creator data</h3>
        <p><%= @creator.email %></p>
        <ul>
          <li>Number of followers :<%= @creator.number_suscribers.nil? ? " 0" : @creator.number_suscribers %></li>
          <li>Number of projects done : <%= @done_projects.count %></li>
          <li>On going projects : <%= @ongoing_projects.count %></li>
          <li>Number of investors : <%= @investors.count %></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="newproject container">
    <h3>My projects you can invest in</h3>
      <% @ongoing_projects.each do |project| %>
      <%= link_to project_path(project), class: 'text-decoration-none text-dark' do %>
        <div class="row mt-2 project-card">
          <%= cl_image_tag project.photo.key  %>
          <div> <%= project.title %></div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
