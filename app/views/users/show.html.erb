<%= render 'shared/navbar_univers' %>

<div class="creator-banner" >
  <%= image_tag "Saly-38.png", style: "position: absolute; height: 550px; right: 120px; transform: rotate(16deg); z-index: 2; top: 120px;" %>

  <div class="container d-flex align-items-center justify-content-start" style="background-color: transparent;">
    <%= cl_image_tag(@creator.photo.key, crop: :thumb, gravity: :face, class:"avatar-creator-page") %>
    <h1 class="ml-4"><strong><%= @creator.pseudo %></strong></h1>
  </div>
</div>

<div class="creator container mt-5 bg-white">
  <div class="row d-flex justify-content-between align-items">
    <div class="col-sm-6" style="height: 400px padding: 88px">
      <div class="embed-responsive embed-responsive-16by9" style="height: 400px">
        <iframe class="embed-responsive-item" src="<%= @creator.youtube_link %>" allowfullscreen></iframe>
      </div>
    </div>
    <div class="whoami-box col-sm-5 position-relative text-center">
      <h2>About me</h2>
      <br>
      <p><%= @creator.bio %></p>
      <div class="data ml-50px ">
        <div class="card-header">
          <h3 > Creator data</h3>
        </div>
        <ul class="list-group list-group-flush text-center mt-3">
          <li><mark class = "black bg-white">Number of followers : </mark><strong><%= @creator.number_suscribers.nil? ? " 0" : number_with_delimiter(@creator.number_suscribers, delimiter: ',') %></li></strong>
          <li><mark class = "black bg-white">Number of projects done : </mark><strong><%= @done_projects.count %></li></strong>
          <li><mark class = "black bg-white">On going projects : </mark><strong><%= @ongoing_projects.count %></li></strong>
          <li><mark class = "black bg-white">Number of investors : </mark><strong><%= @investors.count %></li></strong>
        </ul>
      </div>
    </div>
  </div>
  <div class="newproject container bg-white mb-5">
    <% if @ongoing_projects.empty? %>
      <h3><mark class = "black bg-white">New project <mark class = "purple bg-white">coming soon...</mark></mark></h3>
    <% else %>
      <h3 class="usershowh3"><mark class = "purple"> My projects</mark> you can invest in</h3>
        <div class="row mt-4">
          <% @ongoing_projects.each do |project| %>
            <div class="col-6">
              <%= link_to project_path(project), class: 'text-decoration-none text-dark' do %>
                <div class="d-flex project-card">
                  <%= cl_image_tag project.photo.key, height: 120, width: 120, crop: "fill"  %>
                  <div><h5><%= project.title %></h5></div></h5>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
    <% end %>
  </div>
</div>

